{
    "[python]": {
      "editor.defaultFormatter": "ms-python.black-formatter",
      "editor.formatOnSave": true
    },
    "[cpp]": {
      "editor.formatOnSave": true
    },
    "black-formatter.importStrategy": "useBundled",
    "black-formatter.args": [
      "--line-length",
      "88"
    ],
    "markdown.copyFiles.destination": {
      "**/*": "images/"
    },
    "files.associations": {
      "array": "cpp",
      "deque": "cpp",
      "string": "cpp",
      "unordered_map": "cpp",
      "vector": "cpp",
      "string_view": "cpp",
      "initializer_list": "cpp"
    }
  }